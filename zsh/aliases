# ALIASES
# replacements
alias cp='cp -v'
alias cat='cat -n'
alias mv='mv -v'
alias rm='rm -v'
alias mkdir='mkdir -v'
alias ls='ls --color=auto --group-directories-first'
alias cl='clear'

# single letters
alias g='git'
alias r='ranger'
alias v='vim'
alias tat='tmux attach -t'

# words
alias xup='xrdb -I$HOME ~/.Xresources'
alias lock='/usr/bin/i3lock-fancy'
alias sdnow='shutdown now'
alias kilssh='ssh mbyx3ac2@kilburn.cs.man.ac.uk'
alias dots='cd ~/.dotfiles'
alias groot='cd $(git rev-parse --show-toplevel 2> /dev/null || echo -n ".")'
alias cdmen='sudo connman_dmenu'

alias py='python'

# autocorrent exceptions
alias man='nocorrect man'
alias mkdir='nocorrect mkdir'
alias mv='nocorrect mv'
alias cp='nocorrect cp'
alias sudo='nocorrect sudo'
alias pacaur='nocorrect pacaur'
